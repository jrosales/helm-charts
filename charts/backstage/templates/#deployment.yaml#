apiVersion: apps/v1
kind: Deployment
metadata:
  name: backstage-backend
  labels:
    app.kubernetes.io/name: backstage-backend
    helm.sh/chart: backstage-0.1.1-alpha.12
    app.kubernetes.io/instance: backstage
    app.kubernetes.io/version: "1.0"
    app.kubernetes.io/managed-by: Helm
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: backstage-backend
      app.kubernetes.io/instance: backstage
